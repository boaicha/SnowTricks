{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <section class="py-5">
        <div class="container px-5 my-5">
            <div class="row gx-5">
                <div class="col-lg-3">
                    <div class="d-flex align-items-center mt-lg-5 mb-4">
                        <img class="img-fluid rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg"
                             alt="..."/>
                        <div class="ms-3">
                            <div class="fw-bold">Valerie Luna</div>
                            <div class="text-muted">News, Business</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <!-- Post content-->
                    <article>
                        <!-- Post header-->
                        <header class="mb-4">
                            <!-- Post title-->
                            <h1 class="fw-bolder mb-1">{{ trick.name }}</h1>
                            {% if user != null %}
                                <div style="margin-left: 90%">
                                <a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                    </svg></a>&nbsp;&nbsp;&nbsp;
                                <a href="{{ path('app_trick_delete', {'slug': trick.slug}) }}" onclick="ask()"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                    </svg></a>
                                </div>
                            {% endif %}
                            <!-- Post meta content-->
                            <div class="text-muted fst-italic mb-2">{{ trick.creationdate|date('d-M-Y') }}</div>
                            <!-- Post categories-->
                            <a class="badge bg-secondary text-decoration-none link-light" href="#!">Web Design</a>
                            <a class="badge bg-secondary text-decoration-none link-light" href="#!">Freebies</a>
                        </header>
                        <!-- Preview image figure-->
                        {% if image != null %}
                        <figure class="mb-4"><img class="img-fluid rounded"
                                                  src="{{ asset('assets/uploads/tricks/') ~ image.getImage() }}" alt="..."/>
                            {% else %}
                            <figure class="mb-4"><img class="img-fluid rounded"
                                                      src="{{ asset('assets/uploads/tricks/defaut.jpg')}}" alt="..."/>
                            {% endif %}
                        </figure>

                            {% if videos != null %}
                                {% for video in videos %}
                                <iframe src="{{ video.getVideo }}" allowfullscreen></iframe>
                                {% endfor %}
                                {% endif %}
                            {% if images != null %}
                            {% for img in images %}
                            <figure class="mb-4"><img class="img-fluid rounded"
                                                      src="{{ asset('assets/uploads/tricks/mini/300x300-') ~ img.getImage() }}" alt="..."/>
                                {% endfor %}
                                {% endif %}

                        <!-- Post content-->
                            <section class="mb-5">
                                <p>{{ trick.description }}</p>
                            </section>
                            </figure>
                        </figure>
                    </article>

                    <!-- Comments section-->
                    <section>
                        <div class="card bg-light">
                            <div class="card-body">
                                <!-- Comment form-->
                                {% if user != null %}
                                {{ include('trick/discussion.html.twig', {'button_label': 'Valider'}) }}
                                {% endif %}
                                <!-- Comment with nested comments-->

                                {% for discussion in trick.discussions %}
                                    <div class="d-flex mb-4">
                                        <!-- Parent comment-->
                                        <div class="flex-shrink-0"><img class="rounded-circle"
                                                                        src="https://dummyimage.com/50x50/ced4da/6c757d.jpg"
                                                                        alt="..."/></div>
                                        <div class="ms-3">

                                            <div class="fw-bold">{{ discussion.idUser.name }}</div>
                                            {{ discussion }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <!-- Single comment-->

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
                </div>
            </div>
        </div>
    </section>

{% endblock %}