                                        <!-- Parent comment-->
                                        <div class="flex-shrink-0"><img class="rounded-circle"
                                                                        src="https://dummyimage.com/50x50/ced4da/6c757d.jpg"
                                                                        alt="..."/></div>
                                        <div class="ms-3">

                                            <div class="fw-bold">{{ discussion.idUser.name }}</div>
                                            {{ discussion }}
                                        </div>
                                    </div>
                                {% endfor %}
                                   </div>
                            </div>
                            <section class="flex justify-center pt-5">
                                <button type="button" class="btn btn-primary" id="load-more-btn-dis">Voir plus</button>
                            </section>

                            <!-- Single comment-->

                        </div>
                    </section>
                    <hr>
                </div>
            </div>
        </div>
    </section>


{% block javascripts %}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loadMoreBtn = document.getElementById('load-more-btn-dis');
            const trickContainer = document.getElementById('discussions');

            let offset = {{ limitedDiscussions|length }}; // Initialize the offset with the number of discussions already displayed

            loadMoreBtn.addEventListener('click', function() {
                console.log('ici');
                fetch(`/trick/loadMoreDiscussions?offset=${offset}`)
                    .then(response => response.json())
                    .then(data => {
                        console.log(data);

                        // Append new discussions
                        data.forEach(item => {
                            const discussion = item; // Access the details of the discussion in 'item'

                            console.log(discussion);
                            const discussionDiv = document.createElement('div');
                            discussionDiv.classList.add('d-flex', 'mb-4', 'discussion');

                            discussionDiv.innerHTML = `
                            <div class="flex-shrink-0">
                                <img class="rounded-circle"
                                    src="https://dummyimage.com/50x50/ced4da/6c757d.jpg"
                                    alt="...">
                            </div>
                            <div class="ms-3">
                                <div class="fw-bold">${discussion.idUser}</div>
                                ${discussion.content}
                            </div>
                        `;
                            trickContainer.appendChild(discussionDiv);
                        });

                        offset += data.length; // Update the offset
                        console.log(offset);
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });

            });
            console.log('offset');
        });
    </script>


{% endblock javascripts %}

</html>
{% endblock %}
