{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-5">
                <h1 class="fw-bolder">Mot de passe oublié</h1>
            </div>
            <div class="card rounded-3 py-5 px-4 px-md-5 mb-5">
                <div class="card-body">
                    <div class="row gx-5 justify-content-center">
                        <div class="col-10">
                            {{ form_start(resetForm) }}
                            <div class="form-floating mb-3">
                                {{ form_row(resetForm.plainPassword) }}
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary btn-lg">Réinitialisation du mot de passe</button>
                            </div>
                            {{ form_end(resetForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

                


{% endblock %}
