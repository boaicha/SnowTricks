{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}


{% block body %}
    <html lang="en">
    <head>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>
    <style>
        #main {
            width: 980px;

            height: 400px;

            display: flex;
            flex-wrap: wrap;
        }


        #main div iframe {
            width: 200px;
            height: 150px; /* Adjust the height as needed */
            margin: 10px; /* Add margin for spacing */
        }

        .agrandir {
            width: 970px;
            height: 600px;
        }


        body {
            margin-bottom: 100px;
            z-index: 100;/* Espace pour empêcher le contenu de chevaucher la section fixe en bas */
        }
        .comments-section {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            max-width: 800px; /* Largeur maximale de la section */
            padding: 20px;
            background-color: #fff;
            z-index: 9999; /* Ajustez la valeur z-index si nécessaire pour empêcher le chevauchement avec d'autres éléments */
        }

        /*    TEST */
        #main {
            width: 92%; /* Set the main content width to occupy 80% of the page */
            margin: auto; /* Center the main content horizontally */
            display: flex;
            flex-wrap: wrap;
        }

        /* Adjusted column widths for responsiveness */
        .col-lg-9 {
            flex: 0 0 70%; /* Set the width to occupy 70% of the available space */
            max-width: 70%;
            margin-right: 5%; /* Add space between columns */
        }

        .col-lg-3 {
            flex: 0 0 25%; /* Set the width for the sidebar content */
            max-width: 25%;
        }


        #main div img {
            width: 200px;
            height: 150px; /* Adjust the height as needed */
            margin: 5px; /* Add margin for spacing */
        }

        .displayImage {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }

        .delete-button {
            margin-top: 8px; /* Adjust this value according to your layout */
            /* Add any additional styling for the delete button */
        }
    </style>

    <section class="py-5">
        <div class="container px-5 my-5">
            <div class="row gx-5">
                <div class="">
                    {{ form_start(trickForm) }}
                    <!-- Post content-->
                    <article>

                        <!-- Preview image figure-->

                        {% if trick.images.get(0) != null %}
                        <figure class="mb-4"><img class="img-fluid rounded agrandir"
                                                  src="{{ asset('assets/uploads/tricks/') ~trick.images.get(0).getImage() }}" alt="..."/>
                            {% else %}
                            <figure class="mb-4"><img class="img-fluid rounded"
                                                      src="{{ asset('assets/uploads/tricks/defaut.jpg')}}" alt="..."/>
                                {% endif %}
                            </figure>

                            <div id="main">

                                {% if trick.videos != null %}
                                    {% for video in trick.videos %}
                                        <div><iframe src="{{ video.getVideo }}" allowfullscreen></iframe></div>
                                    {% endfor %}
                                {% endif %}
                                {% if trick.images != null %}
                                    {% for img in trick.images %}
                                        <div class="displayImage">
                                            <img class="img-fluid rounded"
                                                 src="{{ asset('assets/uploads/tricks/mini/300x300-') ~ img.getImage() }}" alt="..."/>

                                            <form action="{{ path('delete_image', {'slug': trick.slug, 'id': img.id}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this image?')">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ img.id) }}">
                                                <button type="submit" class="delete-button">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    {% endfor %}
                                {% endif %}

                            </div>
                            <!-- Post content-->
                            <section class="mb-5">
                                <p>{{ form_row(trickForm.name) }}</p>
                                <p>{{ form_row(trickForm.description) }}</p>
                                {{ form_row(trickForm.images) }}
                                {{ form_row(trickForm.idCategory) }}

                                <div id="videos-fields">
                                    {{ form_errors(trickForm.videos) }}
                                    {{ form_label(trickForm.videos) }}

                                    {{ form_row(trickForm.videos) }}

                                    <button type="button" id="add-video" class="btn btn-primary mt-2">Ajouter une vidéo</button>
                                <script>
                                    const addButton = document.getElementById('add-video');
                                    const videosContainer = document.getElementById('videos-fields');
                                    let index = {{ trickForm.videos|length }};

                                    addButton.addEventListener('click', () => {
                                        const template = `<div class="video-field">
                                            <label for="trick_videos_${index}" class="form-label">Vidéo ${index + 1}</label>
                                            <input type="text" id="trick_videos_${index}" name="trick[videos][${index}]" class="form-control" />
                                          </div>`;
                                        const wrapper = document.createElement('div');
                                        wrapper.innerHTML = template;

                                        videosContainer.appendChild(wrapper);
                                        index++;
                                    });
                                </script>
                                </div>

                                <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
                            </section>
                        </figure>
                    </article>



                </div>
{#                <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>#}
                {{ form_end(trickForm) }}
            </div>
        </div>
    </section>




    </html>
{% endblock %}
